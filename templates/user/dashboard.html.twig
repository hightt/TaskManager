<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Dashboard |
				{{ user.name }}
			{% endblock %}
		</title>

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> {% block stylesheets %}{% endblock %}
		</head>
		<body class="bg-light">
			<nav class="navbar navbar-dark bg-primary mb-4">
				<div class="container">
					<span class="navbar-brand mb-0 h1">Dashboard</span>
					<a href="{{ path('app_logout') }}" class="btn btn-success btn-sm">Wyloguj</a>
					<a href="{{ path('app_task_new') }}" class="btn btn-success btn-sm">Dodaj zadanie</a>
				</div>
			</nav>

			<div class="container">
				<div class="card shadow-sm">
					<div class="card-header bg-white">
						<h5 class="mb-0">Pobieranie danych o zalogowanym użytkowniku</h5>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead class="table-light">
								<tr>
									<th>ID</th>
									<th>Imię i nazwisko</th>
									<th>E-mail</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>{{ user.userId.id }}</td>
									<td>{{ user.name }}</td>
									<td>{{ user.userEmail.value }}</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>

				<div class="card shadow-sm mt-5">
					<div class="card-header bg-white">
						<h5 class="mb-0">Lista zadań przypisanych do użytkownika</h5>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead class="table-light">
								<tr>
									<th>ID</th>
									<th>Nazwa zadania</th>
									<th>Opis</th>
									<th>Status</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
                                {% for task in tasks %}
                                    <tr>
                                        <td>{{ task.id.id }}</td>
                                        <td>{{ task.name }}</td>
                                        <td>{{ task.description }}</td>
                                        <td>{{ task.status.value }}</td>
                                        <td>
                                            <a href="{{ path('app_task_change_status', {'id': task.id.id}) }}" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Zmień status
                                            </a> 
                                        </td>
                                    </tr>
                                {% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>

			 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
